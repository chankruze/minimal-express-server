{
  "name": "minimal-express-server",
  "version": "1.0.0",
  "description": "backend API server for any project",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "prestart": "npm install && npm run build",
    "start": "node dist/index.js",
    "build": "npm run lint && rimraf dist && tsc",
    "predev": "npm run build",
    "dev": "cross-env NODE_ENV='development' concurrently \"tsc --watch\" \"nodemon dist/index.js\"",
    "lint": "eslint . --ext .ts --fix",
    "precommit": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chankruze/minimal-express-server.git"
  },
  "keywords": [],
  "author": "chankruze <chankruze@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chankruze/minimal-express-server/issues"
  },
  "homepage": "https://github.com/chankruze/minimal-express-server#readme",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "chai": "^4.3.6",
    "concurrently": "^7.4.0",
    "eslint": "^8.25.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "axios": "^1.1.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "mongodb": "^4.10.0",
    "morgan": "^1.10.0",
    "nanoid": "^4.0.0"
  }
}
