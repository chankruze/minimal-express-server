{
  "name": "minimal-express-server",
  "version": "1.0.0",
  "description": "backend API server for any project",
  "main": "dist/index.js",
  "scripts": {
    "prestart": "npm install && npm run build",
    "start": "node dist/index.js",
    "build": "npm run lint && rimraf dist && tsc",
    "predev": "npm run build",
    "dev": "cross-env NODE_ENV='development' concurrently \"tsc --watch\" \"nodemon dist/index.js\"",
    "lint": "eslint --cache \"src/**/*.{,ts}\"",
    "lint:fix": "eslint --cache --fix \"src/**/*.{,ts}\"",
    "precommit": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{,ts}": "npm run lint:fix"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.20",
    "prettier": "^3.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "axios": "^1.1.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0",
    "nanoid": "^4.0.0"
  }
}
